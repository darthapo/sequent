<table class="grid">
  <tr>
    <th>Login</th>
    <th>Email</th>
    <th>&nbsp;</th>
  </tr>
<% for user in @users %>
  <tr class="<%= cycle 'even', 'odd' %>">
    <td><%= link_to user.login, edit_user_path(user) %></td>
    <td><%= user.email %></td>
    <td class="delete"><%= delete_button 'delete', user_path(user), :class=>'delete-icon' %></td>
  </tr>
<% end %>
</table>
  
<br/>

<%= link_button 'New User', new_user_path %>